{
  "name": "forge-arena",
  "version": "1.0.0",
  "description": "Gamified fitness platform prototype",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:local": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-deps": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run install-deps && npm run build",
    "start": "node server/index.js",
    "test:shared": "jest --config config/jest.config.cjs --ci --coverage",
    "test:client": "cd client && npm test -- --watchAll=false",
    "test": "npm run test:shared && npm run test:client"
  },
  "keywords": [
    "fitness",
    "gamification",
    "PERN"
  ],
  "author": "ForgeArena Team",
  "license": "MIT",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "winston-cloudwatch": "^6.3.0"
  }
}
